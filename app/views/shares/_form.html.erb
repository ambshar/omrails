<%= simple_form_for(@share) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :title, as: :text, input_html: {rows: "1"} %>
    <%= f.input :description, as: :text, input_html: {rows: "3"} %>
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
