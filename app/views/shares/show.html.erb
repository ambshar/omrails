<div class="row">
	<div class="span6">
		

		<div class="well" >
			<p>
		   <%= @share.user.name %>
		</p>
			<div align="center">
			<%= image_tag @share.image %>
			</div>

				
		<% if current_user==@share.user %>
		<%= link_to 'Edit', edit_share_path(@share) %> |
		
		<%end%>
		<%= link_to 'Back', shares_path %>
		</div>
	</div>
	<div class = "span4">
		<div class="well" >
			<h3 class="title">
		   <%= @share.title %>
		</h3>

		<p>
		   <%= @share.description %>
		</p>


		</div>
	</div>
	<div class = "span2">
		<div class="well" >
			<% if current_user == @share.user %>
		<%= link_to 'Edit', edit_share_path(@share), class: "btn" %>
		<%= link_to 'Destroy', @share, method: :delete, data: { confirm: 'Are you sure?' },class: "btn" %>
	<% end %>

		</div>
	</div>
</div>


